# Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# BNB Chain Networks
# ===========================================

# BSC Mainnet RPC
BSC_RPC=https://bsc-dataseed.binance.org/

# opBNB Mainnet RPC
OPBNB_RPC=https://opbnb-mainnet-rpc.bnbchain.org/

# BSC Testnet RPC (for development)
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545/

# ===========================================
# Wallet Configuration
# ===========================================

# Your wallet private key (WITHOUT 0x prefix!)
# WARNING: Never commit this file to version control!
WALLET_PRIVATE_KEY=your_private_key_here

# Your wallet address (optional, derived from private key)
WALLET_ADDRESS=0xYourWalletAddress

# ===========================================
# DeFi Protocol Addresses
# ===========================================

# PancakeSwap Router (BSC)
PANCAKE_ROUTER=0x10ED43C718714eb63d5aA57B78B54704E256024E

# PancakeSwap Router (opBNB)
PANCAKE_ROUTER_OPBNB=0x7b28e12F7a6aE55d3Fa1f86cF25C2fddC5E7fC4

# Venus Protocol (BSC)
VENUS_COMPTROLLER=0xfD36E2c2a678ae518C46e91eC0F07bdE4eE4e5d2

# ===========================================
# Notification Settings (Optional)
# ===========================================

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID
TELEGRAM_CHAT_ID=

# ===========================================
# Agent Settings
# ===========================================

# Default gas price multiplier (1.0 = market price)
GAS_MULTIPLIER=1.1

# Minimum transaction value (in BNB)
MIN_TRANSACTION_VALUE=0.001

# Maximum slippage (%)
MAX_SLIPPAGE=1.0

# Check interval for APY updates (seconds)
APY_CHECK_INTERVAL=300

# ===========================================
# Logging
# ===========================================

LOG_LEVEL=INFO
LOG_FILE=logs/auto_defi_agent.log
